<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/horizontal_padding</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsActivityTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/settings_margin_end</item>
        <item name="android:paddingVertical">@dimen/settings_vertical_padding</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/settings_margin_end</item>
        <item name="android:paddingVertical">@dimen/settings_vertical_padding</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">@color/transparent_blue</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">50</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/edit_text_icon_padding</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:paddingEnd">@dimen/padding_end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="TrackViewArtistNameTrackTimeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/min_margin_top</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_text_size_low</item>
    </style>

    <style name="TrackViewEllipseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/min_margin_top</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TrackViewArrowForwardStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/track_margin_start</item>
        <item name="android:layout_marginTop">@dimen/arrow_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/image_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/arrow_margin_bottom</item>
        <item name="tint">@color/white</item>
    </style>

</resources>