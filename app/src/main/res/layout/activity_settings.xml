<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <!-- Settings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp" >

        <ImageView
            android:id="@+id/backToMainActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_back"
            android:contentDescription="@string/settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="28dp"
            android:text="@string/settings"
            android:textColor="@color/button_text"
            android:textSize="@dimen/primary_text_size" />

    </LinearLayout>

    <!-- Night theme -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/settings_margin_start"
        android:layout_marginEnd="@dimen/settings_margin_end"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="@dimen/text_view_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/night_theme"
            android:textColor="@color/black"
            android:textSize="@dimen/regular_text_size" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Share app -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/settings_margin_start"
        android:layout_marginEnd="@dimen/settings_margin_end"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/settings_vertical_padding">

        <TextView
            android:layout_width="@dimen/text_view_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/share"
            android:textColor="@color/black"
            android:textSize="@dimen/regular_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/share"
            android:src="@drawable/share" />

    </LinearLayout>

    <!-- Support -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/settings_margin_start"
        android:layout_marginEnd="14dp"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/settings_vertical_padding">

        <TextView
            android:layout_width="@dimen/text_view_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/support"
            android:textColor="@color/black"
            android:textSize="@dimen/regular_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/support"
            android:src="@drawable/support" />

    </LinearLayout>

    <!-- Terms of use -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/settings_margin_start"
        android:layout_marginEnd="@dimen/settings_margin_end"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/settings_vertical_padding">

        <TextView
            android:layout_width="@dimen/text_view_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/terms_of_use"
            android:textColor="@color/black"
            android:textSize="@dimen/regular_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/terms_of_use"
            android:src="@drawable/arrow_forward" />

    </LinearLayout>

</LinearLayout>