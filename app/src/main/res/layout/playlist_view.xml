<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin_very_low"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPlaylistCover"
        android:layout_width="@dimen/zero_size"
        android:layout_height="@dimen/zero_size"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/tvPlaylistTitle"
        style="@style/PlaylistViewTextStyle"
        android:layout_marginTop="@dimen/min_margin_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPlaylistCover"
        tools:text="Best songs 2021Best songs 2021Best songs 2021Best songs 2021Best songs 2021Best songs 2021" />

    <TextView
        android:id="@+id/tvNumberOfTracks"
        style="@style/PlaylistViewTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlaylistTitle"
        tools:text="ОписаниеОписаниеОписаниеОписаниеОписаниеОписаниеОписаниеОписание" />
</androidx.constraintlayout.widget.ConstraintLayout>